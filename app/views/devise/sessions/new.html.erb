  <h2>Войти</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: false, label: 'Почта', autofocus: true %>
      <%= f.input :password, label: 'Пароль', required: false %>
      <%= f.input :remember_me, label: 'Запомнить меня', as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Войти", class: 'btn btn-block btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
